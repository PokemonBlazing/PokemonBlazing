<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Centro de Curación</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="css/healCenter.css">
</head>
<body>
    <div class="contenedor">
        <div class="marco" style="position: relative;
        width: 550px;
        height: 400px;
        border: 10px solid transparent; /* Quitamos el borde */
        border-image: 
            linear-gradient(to right, #8b4513, #42210b); /* Degradado de roble oscuro */
        border-image-slice: 1; /* Divide el degradado en el borde */
        border-radius: 10px; /* Borde redondeado */
        overflow: hidden;">
            <img src="images/heal.gif" alt="Contenido GIF">
        </div>
        <div class="subtitulo" id="subtitulo1">Curando pokemon...</div>
        <div class="subtitulo" id="subtitulo2">Espere porfavor...</div>
        <div class="contador subtitulo" id="contador">7...</div>
        <a href="/encounter2" class="no-underline"><button class="continuar-btn no-underline" id="continuar-btn" style="display:none;">Continuar</button></a>
    </div>
    <script>document.addEventListener('DOMContentLoaded', function() {
        var contadorElement = document.getElementById('contador');
        var continuarBtn = document.getElementById('continuar-btn'); // Obtenemos el botón "Continuar"
        var s1 = document.getElementById('subtitulo1');
        var s2 = document.getElementById('subtitulo2');
        var contador = 7;
    
        var intervalo = setInterval(function() {
            contador--;
            contadorElement.textContent = contador;
    
            if (contador <= 0) {
                clearInterval(intervalo);
                contadorElement.style.display = 'none'; // Ocultamos el contador
                s1.innerHTML = "¡Pokemon curado!";
                s2.innerHTML = "¡Gracias por esperar!";
                continuarBtn.style.display = 'block'; // Mostramos el botón "Continuar"
                continuarBtn.style.marginLeft = '36%';
            
            }
        }, 1000);
    });
    
    </script>
</body>
</html>
